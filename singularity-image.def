BootStrap: docker
From: osrf/ros:melodic-desktop-full-bionic

%post
    apt-get update && apt-get install -y --no-install-recommends apt-utils dialog sudo
    apt-key update
    apt update
    apt -y install pkg-config unzip ffmpeg qtbase5-dev nano tmux gdb valgrind
    apt -y install python3-dev python3-pip python3-numpy
    apt -y install python-dev python-pip
    apt -y install ros-melodic-ackermann-msgs
    pip install rospkg
    pip3 install rospkg
    apt-get clean

    /bin/bash -c "source /opt/ros/melodic/setup.bash"

%environment

